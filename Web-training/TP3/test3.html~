<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>1819_INFO2_PWCS_TP1_EXO2_Q1</title>
    <link rel="stylesheet" href="style.css">
    <SCRIPT type = text/JavaScript"></SCRIPT>
	<script>
		var aCanvas;
		var requestID;
		var x = 100;
		var y = 100;
		function init()
		{
			aCanvas=document.getElementById('myCanvas');
			context = aCanvas.getContext("2d");
			context.fillStyle = "green";
			printRect();
		}

		function pausecomp(millis) 
		{
			var date = new Date();
			var curDate = null;
			do 
			{ 
				curDate = new Date();
			} 
			while(curDate-date < millis);
		} 

		printRect = function()
		{
			var date = new Date();
			pausecomp(250);
			var curDate = new Date();
			var diff = curDate - date;
			context.clearRect(x,y,50,50);
			x+=diff;
			context.fillRect(x,y,50,50);
			if(x<aCanvas.width)
			{
				requestID = window.requestAnimationFrame(printRect);
			}		
		}
	</script>
  </head>
  <body onload = 'init()'>
    <canvas id="myCanvas" width="1000" height="200"></canvas>
  </body>
</html>
